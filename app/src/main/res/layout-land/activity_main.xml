<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:gravity = "center"
    android:orientation = "vertical">
    <ScrollView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_weight = "1"
        android:layout_marginHorizontal = "50dp"
        android:scrollbars = "none">
        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "vertical">
            <RelativeLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:orientation = "horizontal">
                <LinearLayout
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_alignParentStart = "true"
                    android:layout_margin = "10dp"
                    android:background = "@drawable/back_shape_round"
                    android:orientation = "vertical"
                    android:padding = "20dp">
                    <Button
                        android:id = "@+id/bridge01"
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_margin = "5dp"
                        android:background = "@drawable/btn_shape_round_blue"
                        android:paddingHorizontal = "5dp"
                        android:textSize = "20dp"
                        android:textStyle = "bold" />
                    <Button
                        android:id = "@+id/bridge02"
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_margin = "5dp"
                        android:background = "@drawable/btn_shape_round_blue"
                        android:padding = "5dp"
                        android:textSize = "20dp"
                        android:textStyle = "bold" />
                    <Button
                        android:id = "@+id/bridge03"
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_margin = "5dp"
                        android:background = "@drawable/btn_shape_round_blue"
                        android:padding = "5dp"
                        android:textSize = "20dp"
                        android:textStyle = "bold" />
                </LinearLayout>
                <GridLayout
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_centerInParent = "true"
                    android:columnCount = "4">
                    <Button
                        android:id = "@+id/blinky1"
                        android:layout_width = "20dp"
                        android:layout_height = "20dp"
                        android:layout_margin = "10dp"
                        android:background = "@drawable/btn_shape_circle_small" />
                    <Button
                        android:id = "@+id/blinky2"
                        android:layout_width = "20dp"
                        android:layout_height = "20dp"
                        android:layout_margin = "10dp"
                        android:background = "@drawable/btn_shape_circle_small" />
                    <Button
                        android:id = "@+id/blinky3"
                        android:layout_width = "20dp"
                        android:layout_height = "20dp"
                        android:layout_margin = "10dp"
                        android:background = "@drawable/btn_shape_circle_small" />
                    <Button
                        android:id = "@+id/blinky4"
                        android:layout_width = "20dp"
                        android:layout_height = "20dp"
                        android:layout_margin = "10dp"
                        android:background = "@drawable/btn_shape_circle_small" />
                    <Button
                        android:id = "@+id/blinky5"
                        android:layout_width = "20dp"
                        android:layout_height = "20dp"
                        android:layout_margin = "10dp"
                        android:background = "@drawable/btn_shape_circle_small" />
                    <Button
                        android:id = "@+id/blinky6"
                        android:layout_width = "20dp"
                        android:layout_height = "20dp"
                        android:layout_margin = "10dp"
                        android:background = "@drawable/btn_shape_circle_small" />
                    <Button
                        android:id = "@+id/blinky7"
                        android:layout_width = "20dp"
                        android:layout_height = "20dp"
                        android:layout_margin = "10dp"
                        android:background = "@drawable/btn_shape_circle_small" />
                    <Button
                        android:id = "@+id/blinky8"
                        android:layout_width = "20dp"
                        android:layout_height = "20dp"
                        android:layout_margin = "10dp"
                        android:background = "@drawable/btn_shape_circle_small" />
                </GridLayout>
                <LinearLayout
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_alignParentEnd = "true"
                    android:layout_weight = "0"
                    android:orientation = "vertical"
                    android:padding = "10dp">
                    <Button
                        android:id = "@+id/onoff"
                        android:layout_width = "120dp"
                        android:layout_height = "120dp"
                        android:layout_gravity = "center_horizontal"
                        android:layout_margin = "5dp"
                        android:background = "@drawable/btn_shape_circle_blue"
                        android:paddingHorizontal = "5dp" />
                    <TextView
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_gravity = "center_horizontal"
                        android:text = "ON/OFF"
                        android:textSize = "20dp"
                        android:textStyle = "bold" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:background = "@drawable/back_shape_round"
                android:padding = "20dp"
                android:orientation = "horizontal">
                <Button
                    android:id = "@+id/sound01"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_alignParentLeft = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_yellow"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/sound02"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_alignParentRight = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_yellow"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/sound03"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/sound01"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_yellow"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/sound04"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/sound01"
                    android:layout_margin = "5dp"
                    android:layout_toRightOf = "@id/sound03"
                    android:background = "@drawable/btn_shape_round_yellow"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/sound05"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/sound03"
                    android:layout_margin = "5dp"
                    android:layout_toLeftOf = "@id/sound06"
                    android:background = "@drawable/btn_shape_round_yellow"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/sound06"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/sound04"
                    android:layout_alignParentRight = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_yellow"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/sound07"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/sound05"
                    android:layout_alignParentLeft = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_yellow"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/sound08"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/sound07"
                    android:layout_centerHorizontal = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_yellow"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/sound09"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/sound08"
                    android:layout_alignParentLeft = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_yellow"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/sound10"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/sound09"
                    android:layout_alignParentLeft = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_yellow"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/light1"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/sound10"
                    android:layout_alignParentLeft = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_red"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/light2"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/sound10"
                    android:layout_alignParentRight = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_red"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/light3"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/light1"
                    android:layout_centerHorizontal = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_red"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/light4"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/light3"
                    android:layout_alignParentLeft = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_red"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/light5"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/light3"
                    android:layout_alignParentRight = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_red"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/light6"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/light4"
                    android:layout_centerHorizontal = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_red"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
                <Button
                    android:id = "@+id/light7"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@id/light6"
                    android:layout_alignParentLeft = "true"
                    android:layout_margin = "5dp"
                    android:background = "@drawable/btn_shape_round_red"
                    android:paddingHorizontal = "40dp"
                    android:textSize = "20dp"
                    android:textStyle = "bold" />
            </RelativeLayout>
            <SeekBar
                android:id = "@+id/volume"
                android:padding = "20dp"
                android:layout_marginVertical = "20dp"
                android:min = "0"
                android:max = "20"
                app:tickVisible = "true"
                android:background = "@drawable/back_shape_round"
                android:tickMark = "@drawable/seekbar_tickmark"
                android:progressDrawable = "@drawable/seekbar_track"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content" />
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id = "@+id/status"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_weight = "0"
        android:padding = "10dp" />
</LinearLayout>
